//     },
//     {
//      text: '',
//      name: '',
//     },
//    );


    me.items = [
     {
      xtype: 'container',
      region: 'east',
      flex: 1,
      minWidth: 450,
      maxWidth: 700,
      layout: {
        type: 'vbox',
        align: 'stretch',
      },
      items: widgets,
     },
     {
      xtype: 'container',
      region: 'center',
      layout: {
        type: 'column',
      },
      defaultType: 'button',
      defaults: {
        margin: 15,
        iconAlign: 'top',
        width: 110,
        height: 130, // TODO: Make button sizes adapt to viewport's size
        cls: 'menubutton',
      },
      items: buttons,
     },
    ];

    me.callParent(arguments);

    if (me.down('button[name=radar]')) {
      me.down('button[name=radar]').on('click', function() {
        me.fireEvent('openuri', 'acao_dashboard/radar');
      });
    }

    if (me.down('button[name=meteo]')) {
      me.down('button[name=meteo]').on('click', function() {
        me.fireEvent('openuri', 'acao_dashboard/meteo');
      });
