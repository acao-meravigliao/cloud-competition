  extend: 'Ext.panel.Panel',
  requires: [
    'Extgui.Ygg.Core.Task.Tree',
  ],
  layout: 'border',
  title: 'DashBoard',

  initComponent: function() {
    var me = this;

    var superuser = Extgui.app.hasGlobalCapa('superuser');

    var buttons = [];
    var widgets = [];

//    buttons.push(
