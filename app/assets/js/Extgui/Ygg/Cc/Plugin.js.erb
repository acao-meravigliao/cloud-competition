Ext.define('Extgui.Ygg.Cc.Plugin', {
  extend: 'Extgui.Plugin',

  css: '<%=stylesheet_path 'extgui/cc.css'%>',

  init: function() {
    var me = this;

    me.callParent(arguments);

    me.control({
      'viewport > tabpanel > panel[klass=Extgui.Ygg.Cc.Aircraft.IndexPanel] > panel > toolbar button[name=new]':
       { click: function(el, record) { me.openUri('model/ygg/cc/aircrafts/new'); }, },
    });
  },
});
